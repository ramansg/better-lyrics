{
    "type": "module",
    "name": "better-lyrics",
    "version": "2.2.0.2",
    "description": "Enhance YouTube Music with beautiful time-synced lyrics, multilingual support, real-time translations and more",
    "scripts": {
        "dev": "extension dev --browser chrome --polyfill",
        "dev:firefox": "extension dev --browser firefox --polyfill",
        "dev:brave": "extension dev --chromium-binary \"/Applications/Brave Browser.app/Contents/MacOS/Brave Browser\" --polyfill",
        "start": "extension start --polyfill",
        "build": "extension build --browser all --polyfill",
        "build:ci": "tsx tooling/build-and-patch.ts",
        "build:zip": "extension build --browser all --polyfill --zip",
        "build:release": "tsx tooling/build-release-zip.ts",
        "preview": "extension preview --polyfill",
        "lint": "biome lint --write . && biome format --write .",
        "update-version": "tsx tooling/update-version.ts",
        "typecheck": "tsc --noEmit",
        "knip": "knip --cache",
        "knip:fix": "knip --fix",
        "knip:ci": "knip --no-exit-code --reporter github-actions"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/better-lyrics/better-lyrics.git"
    },
    "keywords": [
        "youtube-music",
        "chrome-extension",
        "better-lyrics"
    ],
    "author": "boidushya",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/better-lyrics/better-lyrics/issues"
    },
    "homepage": "https://github.com/better-lyrics/better-lyrics#readme",
    "dependencies": {
        "@codemirror/autocomplete": "^6.20.0",
        "@codemirror/commands": "^6.10.1",
        "@codemirror/lint": "^6.9.2",
        "@codemirror/search": "^6.6.0",
        "@codemirror/state": "^6.5.4",
        "@codemirror/view": "^6.39.11",
        "@formkit/auto-animate": "^0.9.0",
        "@fsegurai/codemirror-theme-material-dark": "^6.2.2",
        "codemirror-lang-rics": "^0.3.20",
        "dompurify": "^3.3.0",
        "extension": "2.1.3",
        "fast-xml-parser": "^5.3.0",
        "fflate": "^0.8.2",
        "marked": "^17.0.1",
        "rics": "^0.3.20",
        "sortablejs": "^1.15.6"
    },
    "devDependencies": {
        "@biomejs/biome": "2.0.4",
        "@types/chrome": "^0.1.34",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^25.0.10",
        "@types/sortablejs": "^1.15.9",
        "@typescript/lib-dom": "npm:@types/web@^0.0.280",
        "axios": "^1.13.3",
        "jsdom": "^27.4.0",
        "knip": "^5.82.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
